<?xml version="1.0" encoding="UTF-8" ?>
<app_config>

<scenes initial="main">
  <scene name="main">
    <node img="bgr.jpg"> <!-- background -->
      
	  
	  <!-- ============== TRANSFORMATIONS ================= -->
	  <node name="trans">
	    <mesh type="plane" size="1" color="0x990000" />
		<!-- by setting anchor to 1, plane will be positioned according to its bottom-right corner -->
		<!-- if only width is specified, height is set according to the aspect ratio of the screen -->
	    <transform pos="1r" z_index="100" anchor="1" width="0.25r" rotation_origin="0.5" />
	  </node>
	  <!-- ================================================ -->
	  
	 <!-- info -->
	<node name="info">
		<transform pos_x="0r" pos_y="1r" z_index="20"  anchor_x="0" anchor_y="1" />
		<text font="MotionControl-Bold.otf" size="16" color="0x000000">Use keys 'page up' and 'page down' to switch between scenes</text>
	</node>
    </node>
  </scene>
</scenes>
</app_config>