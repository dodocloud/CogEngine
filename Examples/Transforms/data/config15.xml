<?xml version="1.0" encoding="UTF-8" ?>
<app_config>

<scenes initial="main">
  <scene name="main">
    <node img="bgr.jpg"> <!-- background -->
      
	  
	  <!-- ============== TRANSFORMATIONS ================= -->
	  <node name="trans">
	    <mesh type="plane" size="1" color="0x990000" />
		<!-- width="0.25r" will create a square; anchor and origin are set to allow the red square to rotate around center -->
	    <transform pos="0.5r" z_index="100" anchor="0.5" width="0.25r" rotation_origin="0.5" rotation="45" />
		
		 <!-- both squares are at the center of the red square -->
		 <node name="trans">
	      <mesh type="plane" size="1" color="0x009900" />
	      <transform pos="0.5r"  z_index="100" anchor="0.5" size="0.5r" rotation_origin="0.5" />
		  
		  	<node name="trans">
	        <mesh type="plane" size="1" color="0x000099" />
	        <transform pos="0.5r" z_index="100" anchor="0.5" size="0.5r" rotation_origin="0.5" />
	      </node>
	    </node>
	  </node>
	  <!-- ================================================ -->
	  
	 <!-- info -->
	<node name="info">
		<transform pos_x="0r" pos_y="1r" z_index="20"  anchor_x="0" anchor_y="1" />
		<text font="MotionControl-Bold.otf" size="16" color="0x000000">Use keys 'page up' and 'page down' to switch between scenes</text>
	</node>
    </node>
  </scene>
</scenes>
</app_config>