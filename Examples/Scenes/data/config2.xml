<?xml version="1.0" encoding="UTF-8" ?>
<app_config>

   <!-- define transformation entities -->
   <transforms>
    <transform name="t01" pos_x="0.3r" pos_y="0.3r" anchor="0" size="1" rotation_origin="0.5" />
    <transform name="t02" pos_x="1r" pos_y="0.3r" anchor="0" size="1" rotation_origin="0.5" />
	<transform name="t03" pos_x="1r" pos_y="1r" anchor="0" size="1" rotation_origin="0.5" />
	<transform name="t04" pos_x="0.3r" pos_y="1r" anchor="0" size="1" rotation_origin="0.5" />

	<transform name="r01" rotation="0"/>
	<transform name="r02" rotation="360"/>
  </transforms>
  
  <!-- define behavior entities (so they can be used by reference) -->
  <behaviors>
    <behavior name="bt01" type="TransformAnim" from="t01" to="t02" duration="1000" repeat="false" blend="additive" easefunc="expo" />
	<behavior name="bt02" type="TransformAnim" from="t02" to="t03" duration="1000" repeat="false" blend="additive" easefunc="expo"/>
	<behavior name="bt03" type="TransformAnim" from="t03" to="t04" duration="1000" repeat="false" blend="additive" easefunc="expo"/>
	<behavior name="bt04" type="TransformAnim" from="t04" to="t01" duration="1000" repeat="false" blend="additive" easefunc="expo"/>
	<behavior name="rt01" type="TransformAnim" from="r01" to="r02" duration="4000" repeat="true" blend="additive" />
  </behaviors>
 
  <scenes initial="main">
    <scene name="main">
	  <node name="bgr" img="bgr2.jpg">
	  </node>
	  
	  <node name="square" img="sheet_squares.png">
	  <transform size="0.5" z_index="10" rotation_origin="0.5"/>
	    <!-- reference to behaviors (| is divider for values) -->
		<behavior type="MultiAnim" animations="bt01|bt02|bt03|bt04" repeat="true" />
		
		<!-- reference to rotation animation -->
		<behavior ref="rt01" />
		
		 <!-- second group of squares -->
		 <node name="square2" img="sheet_squares.png">
	      <transform pos="0.5" anchor="0.5" size="0.5" z_index="12" rotation_origin="0.5" /> 
		   <behavior ref="rt01" />
	     
		   <!-- third group of squares-->
		   <node name="square3" img="sheet_squares.png">
	           <transform pos="0.5" anchor="0.5" size="0.5" z_index="12" rotation_origin="0.5" /> 
		       <behavior ref="rt01" />
	       </node>
		 </node>
	  </node>
	  <!-- info -->
	  <node name="info">
		<transform pos_x="0r" pos_y="1r" z_index="20"  anchor_x="0" anchor_y="1" />
		<text font="MotionControl-Bold.otf" size="16" color="0x000000">Use keys 'page up' and 'page down' to switch between scenes</text>
      </node>
    </scene>
  </scenes>
</app_config>