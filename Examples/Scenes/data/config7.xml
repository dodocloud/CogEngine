<?xml version="1.0" encoding="UTF-8" ?>
<app_config>


<animations>
    <anim name="grant_anim_sheet" sheet="runningGrant.png" frames="12" lines="7"  start="0" end="63"  repeat="0" increment="1" speed="1"></anim>
</animations>

<transforms>
  <transform name="grant_from" pos_x="0r" pos_y="0.57r" z_index="2" anchor_x="1"  />
  <transform name="grant_to" pos_x="1r" pos_y="0.57r" z_index="2" anchor="0"  />
</transforms>

  <scenes initial="main">
    <scene name="main">
      <node img="bgr2.jpg" />
      <node name="grant" img="mario_0.png">
	    <transform pos_x="0r" pos_y="0.6r" z_index="2" anchor_x="1" width="0.1r" />
		
		<behavior type="SheetAnimator">
		  <setting>
		    <item key="animation" value="grant_anim_sheet" />
		  </setting>
		</behavior> 
		
	    <behavior type="TransformAnim">
		  <setting>
		    <item key="from" value="grant_from" />
			<item key="to" value="grant_to" />
			<item key="duration" value="1000" />
			<item key="repeat" value="true" />
			<item key="blend" value="overlay" />
		  </setting>
		</behavior> 

	  </node>
    </scene>
  </scenes>
</app_config>