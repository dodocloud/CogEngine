<?xml version="1.0" encoding="UTF-8" ?>
<app_config>


<attranimations>
  <anim name="rotation" repeat="0">
	<attranim attr="rotation" from="0" to="360" ttype="abs" mtype="direct" duration="5000"  />
  </anim>
  <anim name="rotation2" repeat="0">
	<attranim attr="rotation" from="0" to="-360" ttype="abs" mtype="direct" duration="5000"  />
  </anim>
</attranimations>


  <scenes initial="main">
    <scene name="main">
	   <scene_settings>
        <setting name="transform">
          <!-- grid sizing -->
          <item key="grid_width" value="100" />
          <item key="grid_height" value="53" />
		  <item key="ref_width" value="800" />
		  <item key="ref_height" value="450" />
        </setting>
      </scene_settings>
	
      <node img="bgr2.jpg" />
	  <node>
	     <node name="anim" img="cog.png">
	      <transform pos_x="0.5" pos_y="0.5" z_index="2" ptype="per" anchor="0.5" width="0.5" stype="per" rotation_origin="0.5" />
		  <behavior type="AttribAnimator" animation="rotation" />
	    </node>
	    <node name="anim2" img="cog.png">
	     <transform pos_x="0.15" pos_y="0.7" z_index="2" ptype="per" anchor="0.5" width="0.35" stype="per" rotation_origin="0.5" />
		  <behavior type="AttribAnimator" animation="rotation2" />
	    </node>
	    <node name="anim3" img="cog.png">
	      <transform pos_x="0.85" pos_y="0.7" z_index="2" ptype="per" anchor="0.5" width="0.35" stype="per" rotation_origin="0.5" />
		  <behavior type="AttribAnimator" animation="rotation2" />
	    </node>
	  </node>
    </scene>
  </scenes>
</app_config>