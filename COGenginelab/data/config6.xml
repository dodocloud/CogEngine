<?xml version="1.0" encoding="UTF-8" ?>
<app_config>

<!-- repository for all animations -->
<animations>
    <anim name="action1" repeat="1" sheet="sheetanim02.png" frames="8" lines="4" start="0" end="31" increment="1" />

    
  <!-- already declared animations can be reused: -->
  <anim name="sampleAnim" speed="0.5">
	<anim ref="action1" revert="true" speed="0.1" />		<!-- 31 - 0 slowly-->
	<anim ref="action1" revert="false" speed="0.1" />       <!-- 0 - 31 slowly-->
	
	<anim speed="2">
	  <anim ref="action1" /> <!-- 2x 0-31 quickly-->
	  <anim ref="action1" />
	  
	  <anim speed="2">
	    <anim ref="action1" /> <!-- 2x 0-31 more quickly-->
		<anim ref="action1" />
	  </anim>
	</anim>
  </anim>
</animations>



  <scenes initial="main">
    <scene name="main">
      <node img="bgr.jpg" />
      <node name="anim" >
	    <transform pos_x="0.5" pos_y="0.5" z_index="2" ptype="rel" anchor="0.5" />
		<shape type="plane" width="1" height="1" />
		<behavior type="SheetAnimator">
		  <setting>
		    <item key="animation" value="sampleAnim" />
		  </setting>
		</behavior> 
		
	  </node>
    </scene>
  </scenes>




