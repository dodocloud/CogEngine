<?xml version="1.0" encoding="UTF-8" ?>
<app_config>

  <settings>
    <!-- default values -->
    <default_settings>
      <setting name="transform">
        <item key="pos_x" value="0.0" />
        <item key="pos_y" value="0.0" />
        <item key="anchor_x" value="0.0" />
        <item key="anchor_y" value="0.0" />
        <item key="width" value="1" />
        <item key="height" value="1" />
        <item key="size" value="1" />
        <item key="sizing_rel" value="width" />
        <!-- sizing according to width -->
        <item key="ptype" value="per" />
        <item key="stype" value="per" />
      </setting>
    </default_settings>

    <!-- global settings -->
    <global_settings>
      <!-- debug logger, output into the console -->
      <setting name="logger">
        <item key="level" value="DEBUG" />
        <item key="channel" value="console" />
      </setting>
    </global_settings>

    <!-- project settings (game logic etc) -->
    <project_settings>

    </project_settings>
  </settings>
 

  <!-- collection of scenes -->
  <scenes initial="main_menu">

    <scene name="main_menu">
		  <!-- scene settings overrides default settings -->
      <scene_settings>
        <setting name="transform">
          <!-- grid sizing -->
          <item key="grid_width" value="100" />
          <item key="grid_height" value="50" />
        </setting>
      </scene_settings>

      <node name="desk_board" img="images/rect_red.jpg">
        <transform pos_x="0" pos_y="0" ptype="per" size="1" anchor="0" stype="abs" />
		
	  <node name="desk_board" img="images/rect_blue.jpg">
        <transform pos_x="1" pos_y="1" ptype="per" size="2" anchor="0" stype="abs" />
		
	    <node name="desk_board" img="images/rect_green.jpg">
           <transform pos_x="1" pos_y="1" ptype="per" size="4" anchor="0" stype="abs" />
        </node>
      </node>
	  
      </node>
	  
    </scene>

	
  </scenes>
</app_config>